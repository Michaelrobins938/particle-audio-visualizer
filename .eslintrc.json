{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-constant-condition": "warn",
    "no-empty": "warn",
    "prefer-const": "off",
    "no-var": "warn"
  },
  "globals": {
    "THREE": "readonly"
  }
} 